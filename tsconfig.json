{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES5",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2017", "dom"]
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "mocha",
    "chai",
    "sinon",
    "sinon-chai"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    ".tmp",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
